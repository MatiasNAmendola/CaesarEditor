<Window x:Class="CaesarEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ae="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="CaesarEditor" Icon="CaesarEditor.ico" Height="512" Width="512">
    <DockPanel>
        <Menu Name="mainMenu" DockPanel.Dock="Top"></Menu>
        <!--<ToolBar Name="toolBar" DockPanel.Dock="Top"></ToolBar>-->
        <StatusBar Name="statusBar" DockPanel.Dock="Bottom" Height="24"></StatusBar>
        <Border Grid.Row="1" BorderThickness="0,1,0,1" BorderBrush="Gray">
            <ae:TextEditor Name="textEditor" ShowLineNumbers="True" FontFamily="Consolas" FontSize="10pt"></ae:TextEditor>
        </Border>
    </DockPanel>
</Window>